<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:orientation="vertical"
    android:background="@drawable/bluegradientbackground">

    <ImageView
        android:id="@+id/mainPageImage"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:src="@drawable/appfirstpageimage" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/hometext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="#CDDC39"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/hometext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Homeless People Aid"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="#CDDC39"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/explore"
            android:text="Explore"
            android:ems="20"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/profile"
            android:text="Dashboard"
            android:ems="20"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/emergencycontact"
            android:text="Emergency Contact"
            android:ems="20"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/feedback"
            android:text="Homeless Predictor"
            android:ems="20"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/complain"
            android:text="Complaints"
            android:ems="20"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
